{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "types": [
      "@cloudflare/workers-types"
    ],
    "outDir": "./dist/types/"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}